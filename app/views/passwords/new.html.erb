<div id="auth">
  <div class="row h-100">
    <div class="col-lg-5 col-12">
      <div id="auth-left">
        <div class="auth-logo">
          <%= link_to root_path do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40" width="32" height="32" fill-rule="evenodd" style="vertical-align: text-bottom;">
            <g transform="translate(4, 4)">
              <!-- Outer circle -->
              <circle cx="16" cy="16" r="16" fill="#435ebe"/>
              <!-- Cross -->
              <rect x="7" y="14" width="18" height="4" fill="white"/>
              <rect x="14" y="7" width="4" height="18" fill="white"/>
            </g>
          </svg>
          <span style="font-size: 2rem; margin-left: 0.5rem;">MedStick</span>
          <% end %>
        </div>
        <h1 class="auth-title">Forgot Password</h1>
        <p class="auth-subtitle mb-5">Input your email and we will send you reset password link.</p>

        <%= form_with url: new_session_path, local: true do %>
          <div class="form-group position-relative has-icon-left mb-4">
            <%= email_field_tag :email, nil, class: "form-control form-control-xl", placeholder: "Email" %>
            <div class="form-control-icon">
              <i class="bi bi-envelope"></i>
            </div>
          </div>
          <%= submit_tag "Send", class: "btn btn-primary btn-block btn-lg shadow-lg mt-5" %>
        <% end %>
        <div class="text-center mt-5 text-lg fs-4">
          <p class='text-gray-600'>
            Remember your account? 
            <%= link_to "Log in", new_session_path, class: "font-bold" %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-lg-7 d-none d-lg-block">
      <div id="auth-right">
      </div>
    </div>
  </div>
</div>
